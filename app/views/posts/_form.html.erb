      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :title, class: "right inline", title: "Full post title", data: {tooltip: true } %><br>
    </div>

    <div class="small-9 columns">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row collapse">
    <div class="small-3 columns">
      <%= f.label :body, class: "right inline", title: "Full text of the post", data: {tooltip: true } %><br>
    </div>

    <div class="small-9 columns">
      <%= f.text_area :body %>
    </div>
  </div>`
  <% if PostPolicy.new(current_user, @post).publish? %>
    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :published, class: "right inline", title: "Is this post published?", data: {tooltip: true } %><br>
      </div>

      <div class="small-9 columns">
        <%= f.check_box :published %>
      </div>
    </div>
  <% end %>
  <div class="row collapse">
    <div class="small-9 small-offset-3 columns">
      <%= f.submit %>
    </div>
  </div>
<% end %>
